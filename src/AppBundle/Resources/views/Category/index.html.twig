{% extends "AppBundle::base.html.twig" %}

{% block title %}AppBundle:Category:index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Welcome to the Category:index page</h1>
        <table class="table table-striped table-condensed">
            <thead>
            <tr>
                <th>id</th>
                <th>name</th>
                <th>slug</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('categories-show', {slug: category.slug}) }}">{{ category.slug }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
